<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_load_skin_plugin_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载pluginA皮肤"/>

    <Button
        app:layout_constraintLeft_toRightOf="@+id/btn_load_skin_plugin_a"
        android:id="@+id/btn_load_skin_plugin_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载pluginB皮肤"/>

    <TextView
        android:id="@+id/tv_plugin_name"
        app:layout_constraintTop_toBottomOf="@+id/btn_load_skin_plugin_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_plugin_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_plugin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>